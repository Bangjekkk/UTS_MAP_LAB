<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MAP_LAB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="editTextStyle">@style/EditTextStyle.Dark</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Button style for dark mode -->
    <style name="LoginButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BlackButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="CustomTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#91C3FA</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="CustomLinearLayoutStyle">
        <item name="android:background">#000000</item>
    </style>
    <style name="EditTextStyle.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>